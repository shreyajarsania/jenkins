pipeline {
    agent none

    stages {
        stage("build and test the project") {
            agent any
            stages {
               stage("build") {
                   steps {
                       sh "./build.sh"
                   }
               }
               stage("test") {
                   steps {
                       sh "./test.sh"
                   }
               }
            }
            post {
                success {
                	message "success"
		}
            }
        }

        stage("deploy the artifacts if a user confirms") {
            input {
                message "Should we deploy the project?"
            }
            agent any
            steps {
                sh "./deploy.sh"
            }
        }
    }
}
